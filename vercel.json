{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "api/cron/*.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-pick",
      "schedule": "0 17 * * *"
    },
    {
      "path": "/api/cron/performance-update",
      "schedule": "0 23 * * *"
    },
    {
      "path": "/api/cron/weekly-recap",
      "schedule": "0 19 * * 0"
    }
  ]
}